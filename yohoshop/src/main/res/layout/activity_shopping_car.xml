<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mvp.ui.activity.ShoppingCarActivity"
    android:orientation="vertical">
    <RelativeLayout
        android:paddingVertical="10dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#353535"
        android:paddingTop="3dp"
        android:paddingBottom="3dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="购 物 车"
            android:textColor="#fff"
            android:textSize="18dp"
            android:gravity="center"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/left_shopping_car"
            android:layout_marginLeft="20dp"
            android:id="@+id/shopping_back"/>
        <TextView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编辑"
            android:textSize="12sp"
            android:textColor="#fff"
            android:id="@+id/shop_edit"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:visibility="gone"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:orientation="vertical"
                    android:id="@+id/shopping_top_linear"
                    android:background="#fff">
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:src="@mipmap/mine_shopping_car"
                        android:layout_gravity="center_horizontal"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="您的购物车暂无商品"
                        android:gravity="center"
                        android:textSize="8sp"
                        android:textColor="#ADADAD"/>

                    <Button
                        android:layout_width="70dp"
                        android:layout_height="28dp"
                        android:background="@drawable/mine_linear_background"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:text="随便逛逛"
                        android:textSize="10sp"
                        android:id="@+id/shopping_casual"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ECECEC"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/shopping_center_recycle"
                    android:visibility="gone">

                </androidx.recyclerview.widget.RecyclerView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:background="#fff"
                    android:visibility="gone"
                    android:id="@+id/shopping_center_linear">
                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@mipmap/mine_shopping_camera"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="全场加价购"
                        android:textSize="8sp"
                        android:textColor="#000"
                        android:layout_marginLeft="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="去换购"
                        android:textColor="#FA6363"
                        android:textSize="8sp"
                        android:layout_marginRight="3dp"/>
                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/shop2"
                        android:layout_marginRight="3dp"
                        />
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginTop="15dp"
                    android:text="总计￥0.00=商品金额￥0.00"
                    android:gravity="center_vertical"
                    android:textSize="8sp"
                    android:visibility="gone"
                    android:id="@+id/shopping_center_all_money"
                    android:paddingLeft="10dp"
                    android:background="#fff"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="为您优选"
                    android:gravity="center"
                    android:textSize="9sp"
                    android:background="#fff"
                    android:paddingTop="10dp"
                    android:id="@+id/shopping_for_you"
                    android:layout_marginTop="5dp"
                    />
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:paddingTop="10dp"
                    android:id="@+id/shopping_for_recycle">

                </androidx.recyclerview.widget.RecyclerView>

            </LinearLayout>


        </androidx.core.widget.NestedScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#fff"
            android:id="@+id/shopping_bottom_linear"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true">
            <LinearLayout
                android:paddingTop="3dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">
                <CheckBox
                    android:button="@null"
                    android:background="@drawable/shopping_car_ischeck"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:id="@+id/shopping_bottom_check"
                    />
                <TextView
                    android:textSize="12sp"
                    android:textColor="#000"
                    android:text="全选"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginRight="3dp">
                <LinearLayout
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="总价:￥"
                        android:gravity="right"
                        android:singleLine="true"
                        android:textColor="#DB525F"
                        android:textSize="10sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00"
                        android:gravity="right"
                        android:singleLine="true"
                        android:id="@+id/shopping_bottom_all_money"
                        android:textColor="#DB525F"
                        android:textSize="10sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="("
                        android:gravity="right"
                        android:singleLine="true"
                        android:textColor="#DB525F"
                        android:textSize="10sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:gravity="right"
                        android:singleLine="true"
                        android:id="@+id/shopping_bottom_all_num"
                        android:textColor="#DB525F"
                        android:textSize="10sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=")件"
                        android:gravity="right"
                        android:singleLine="true"
                        android:textColor="#DB525F"
                        android:textSize="10sp" />
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="不含运费"
                    android:textSize="8sp"
                    />
            </LinearLayout>
            <Button
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:background="@drawable/shopp_btn_buy"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:text="结算"
                android:id="@+id/shopping_pay_btn"
                android:textSize="10sp"
                android:textColor="#fff"
                />
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>