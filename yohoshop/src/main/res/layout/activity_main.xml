<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mvp.ui.activity.MainActivity">

    <FrameLayout
        android:background="#f456"
        android:id="@+id/main_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>
    <ImageView
        android:id="@+id/yoho_car"
        android:src="@mipmap/yoho_car"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_width="40dp"
        android:layout_height="40dp"/>

    <RadioGroup
        android:background="@mipmap/main_rg_background"
        android:id="@+id/main_rg"
        android:layout_alignParentBottom="true"
        android:weightSum="5"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="54dp">
        <RadioButton
            android:id="@+id/main_home"
            android:checked="true"
            android:layout_marginTop="7dp"
            android:textSize="10sp"
            android:padding="8dp"
            android:textColor="@drawable/main_text"
            android:drawableTop="@drawable/main_home"
            android:textAlignment="center"
            android:text="首页"
            android:layout_weight="1"
            android:button="@null"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

        <RadioButton
            android:id="@+id/main_class"
            android:layout_marginTop="9dp"
            android:textSize="10sp"
            android:padding="8dp"
            android:textColor="@drawable/main_text"
            android:drawableTop="@drawable/main_class"
            android:textAlignment="center"
            android:text="分类"
            android:layout_weight="1"
            android:button="@null"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

        <RadioButton
            android:id="@+id/main_ufo"
            android:textSize="10sp"
            android:padding="4dp"
            android:textColor="@drawable/main_text"
            android:drawableTop="@drawable/main_ufo"
            android:textAlignment="center"
            android:text="首页"
            android:layout_weight="1"
            android:button="@null"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

        <RadioButton
            android:id="@+id/main_com"
            android:layout_marginTop="9dp"
            android:textSize="10sp"
            android:padding="8dp"
            android:textColor="@drawable/main_text"
            android:drawableTop="@drawable/main_com"
            android:textAlignment="center"
            android:text="社区有礼"
            android:layout_weight="1"
            android:button="@null"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

        <RadioButton
            android:id="@+id/main_mine"
            android:layout_marginTop="8dp"
            android:textSize="10sp"
            android:padding="8dp"
            android:textColor="@drawable/main_text"
            android:drawableTop="@drawable/main_mine"
            android:textAlignment="center"
            android:text="我的"
            android:layout_weight="1"
            android:button="@null"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

    </RadioGroup>

</RelativeLayout>